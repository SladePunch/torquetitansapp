<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox fx:controller="GarageApp.AdminController" spacing="10" alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Admin Dashboard" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      <ListView fx:id="jobList" prefHeight="300.0" prefWidth="560.0" />
      <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
      <HBox spacing="10" alignment="CENTER">
         <Button fx:id="addButton" text="Add" />
         <Button fx:id="editButton" text="Edit" />
         <Button fx:id="deleteButton" text="Delete" />
         <Button fx:id="logoutButton" text="Logout" />
      </HBox>
   </children>
</VBox>