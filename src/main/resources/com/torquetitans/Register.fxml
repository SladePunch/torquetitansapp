<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox fx:controller="GarageApp.RegisterController" spacing="10" alignment="CENTER" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Email:" />
      <TextField fx:id="emailField" />
      <Label text="Username:" />
      <TextField fx:id="usernameField" />
      <Label text="Password:" />
      <PasswordField fx:id="passwordField" />
      <Label text="Role:" />
      <ChoiceBox fx:id="roleChoiceBox" />
      <Label fx:id="phoneLabel" text="Phone Number (if mechanic):" visible="false" />
      <TextField fx:id="phoneField" visible="false" />
      <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;" />
      <Button fx:id="registerButton" text="Register" />
      <Button fx:id="backButton" text="Back" />
   </children>
</VBox>