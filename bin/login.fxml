<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vehiclemaintenance.controller.LoginController" spacing="10" alignment="CENTER" stylesheets="@/styles.css">
    <children>
        <Label text="Login" styleClass="label title-label"/>
        <VBox fx:id="loginPane" spacing="15" alignment="CENTER">
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="button login"/>
            <Label fx:id="errorLabel" visible="false" styleClass="label error-label"/>
        </VBox>
    </children>
</VBox>