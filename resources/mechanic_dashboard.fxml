<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.vehiclemaintenance.controller.MechanicDashboardController" spacing="10">
    <children>
        <HBox spacing="10">
            <Button text="View My Tasks" onAction="#showTasks"/>
            <Button text="Search Vehicle" onAction="#showSearch"/>
            <Button text="Logout" onAction="#logout"/>
        </HBox>
        <Label text="My Assigned Tasks"/>
        <TableView fx:id="tasksTable">
            <columns>
                <TableColumn fx:id="taskIdColumn" text="Task ID"/>
                <TableColumn fx:id="vehiclePlateColumn" text="Vehicle (Plate)"/>
                <TableColumn fx:id="serviceTypeColumn" text="Service Type"/>
                <TableColumn fx:id="statusColumn" text="Status"/>
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button text="Update Status" onAction="#updateStatus"/>
            <Button text="View Vehicle Details" onAction="#viewVehicleDetails"/>
        </HBox>
        <Label text="Vehicle Details"/>
        <TextArea fx:id="vehicleDetailsArea" editable="false"/>
    </children>
</VBox>